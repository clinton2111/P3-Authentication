<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tolerance_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="20dp" >

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please keep your Thumb on the fingerprint for 5 seconds"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/iv_calibrator"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_size"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iv_border"
        android:paddingTop="20dp"
        android:src="@drawable/fingerprint"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_largest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_calibrator"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout><!-- From: file:/D:/AndroidstudioProjects/P3%20Authentication/p3Authentication/src/main/res/layout/tolerance_dialog.xml -->