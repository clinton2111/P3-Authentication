<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/lock" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="P3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/splash_txt"
        android:textColorLink="@color/splash_txt"
        android:textSize="60sp" />

    <com.gc.materialdesign.views.ProgressBarCircularIndetermininate
        android:id="@+id/download_progress"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/downloadtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_progress"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:text="\u00a9 Copyright 2014 Qode21"
        android:textColor="@color/splash_txt" />

</RelativeLayout><!-- From: file:/D:/AndroidstudioProjects/P3%20Authentication/p3Authentication/src/main/res/layout/splash.xml -->